---
interface Props {
  class?: string;
  row?: boolean;
}
const { class: className, row = false } = Astro.props;
---

<div
  class={`item-animate inline-flex ${row ? "flex-row col-span-3 gap-5" : "flex-col"} justify-center items-center`}
>
  <slot name="icon" />
  <div class=`flex flex-col items-center item-animated ${className} `>
    <div class={`w-1 bg-white/40 h-10 ${row ? "hidden" : "block"}`}></div>
    <div
      class="rounded-xl bg-gray-500/55 text-balance text-base opacity-80 border-2 border-white/40 p-2 flex flex-col gap-2"
    >
      <slot name="content" />
    </div>
  </div>
</div>
