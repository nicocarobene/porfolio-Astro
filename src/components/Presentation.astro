---
import { getI18N } from "@/i18n";
import AnimationNave from "./AnimationNave.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<article class="flex flex-col justify-center items-center z-10">
  <picture class="w-1/3 md:w-1/3 rounded-full">
    <source srcset="/avatarMobile.avif" media="(max-width: 767px)" />
    <img src="/avatar.jpg" alt="image avatar nicodev" class="rounded-full" />
  </picture>
  <h1 class="text-4xl md:text-5xl my-5 text-[#b9fd4b]">Hi Human 👽</h1>
  <h2 class="text-2lg md:text-2xl text-[#e3e6fc] text-balance text-center">
    I'm
    <span class="text-gradient font-bold md:text-3xl text-2xl">Nico</span>, a
    full stack developer ✌️
  </h2>
</article>
<AnimationNave />
<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
