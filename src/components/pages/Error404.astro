---
import Error404Layout from "@/layouts/Error404Layout.astro";
import { getI18N } from "@/i18n";
import { getLangFromUrl, useTranslatedPath } from "@/i18n/utils";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
---

<Error404Layout
  title=`${i18n.SEO.ERROR_404_TITLE}Â ${new Date().getFullYear()}`
  description={i18n.SEO.ERROR_404_DESCRIPTION}
>
  <section class="flex relative pb-24 min-h-screen">
    this page is not found
    <a
      class="absolute bottom-10 right-10"
      href={translatePath("/", currentLocale)}
    >
      {i18n.SEO.ERROR_404_BACK}
    </a>
  </section>
</Error404Layout>
