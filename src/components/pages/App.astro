---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Presentation from "@/components/Presentation.astro";
import AboutMe from "@/components/AboutMe.astro";
import Contact from "@/components/Contact.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Projects from "@/components/Projects.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.SEO_TITLE_1} description={i18n.SEO_DESCRIPTION}>
  <Header />
  <main class="max-w-[1200px] mx-auto">
    <SectionContainer>
      <Presentation />
    </SectionContainer>
    <SectionContainer
      id="projects"
      class="relative place-content-stretch lg:max-w-7xl"
    >
      <Projects />
    </SectionContainer>
    <SectionContainer id="aboutMe" class="relative place-content-stretch">
      <AboutMe />
    </SectionContainer>
    <SectionContainer
      id="contact"
      class="relative content-center place-content-stretch"
    >
      <Contact />
    </SectionContainer>
  </main>
  <footer class="text-center text-white py-5">
    <!-- <Marquee /> -->
    <h4>
      {i18n.FOOTER.TITLE}
      <a
        href="https://github.com/nicocarobene"
        target="_blank"
        rel="noopener noreferrer">{i18n.FOOTER.TITLE_LINK}</a
      >
    </h4>
  </footer>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;

    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
